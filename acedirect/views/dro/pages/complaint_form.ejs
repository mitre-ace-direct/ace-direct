<!DOCTYPE html>
<html lang='en-us'>
  <head>
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <style>
      #pageContainer {
        padding-left: 0px !important;
        padding-right: 0px !important;
        width: 98vw !important;
      }

      #callVideoColumn {
        height : 86vh;
      }

      #callFeaturesColumn {
        height : 86vh;
      }

      #callButtonsRow {
        background-color: darkgray;
      }

      #speakingToRow {
        background-color: lightgray;
      }

      #remoteViewCol {
        background-color: black;
      }

      #end-call {
        float: right;
        margin-top: 1%;
        margin-right: 1%;
      }

      .circleButton {
        border-radius: 50% !important;
        border: none;
        height : 45px;
        width : 45px !important;
        margin : 5px;
        margin-left: 15px;
        background-color: #073863 !important;
        color: white;
      }

      #startScreenshare {
        background-color: #073863 !important;
        color: white;
      }

      .big-icon {
        font-size:60px !important;
        color: #8f8f8f;
        margin-top:20px;
      }

      .panel-header {
        font-weight:bold;
        font-size:15px;
      }

      .button-area {
        margin-top: 20px;
      }

      .button-area button {
        width: 100%;
        background-color: #073863 !important;
        padding-top: 8px !important;
        padding-bottom: 8px !important;
        font-weight: bold !important;
      }

      .or-column {
        font-weight:bold;
        font-size:15px;
        margin-top:90px;
        width: 9.666667% !important;
      }

      .modal-footer {
        text-align:center !important;
        background-color:#f9f9f9;
        border-radius:6px;
      }

      .button-panel {
        background-color:#f9f9f9 !important;
        padding: 10px;
        margin-bottom: 0px !important;
      }

      .panel-header {
        color: black !important;
        font-weight: bold;
        font-size: 16px;
      }

      .panel-col {
        width: 45% !important;
      }

      .tabs-right {
        border-bottom: 1px solid #ddd;
        padding-top: 2px;
      }
    
      .tabs-right {
        border-left: 1px solid #ddd;
      }
    
      .tabs-right>li {
        float: none;
        margin-bottom: 2px;
      }
    
      .tabs-right>li {
        margin-left: -1px;
      }
    
      .tabs-right>li.active>a,
      .tabs-right>li.active>a:hover,
      .tabs-right>li.active>a:focus {
        border-bottom: 1px solid #ddd !important;
        border-left-color: transparent !important;
      }
    
      .tabs-right>li>a {
        border-radius: 0 4px 4px 0;
        margin-right: 0;
      }

      #collapseButton {
        border-radius: 50%;
        color: #073863;
        border:2px solid lightgrey
      }

      .fileshareButton {
        border-radius: 50%;
        color: black;
        font-size: 15px;
      }

      .fontSizeButtons {
        border:1px solid grey !important;
        height:100%;
      }

    </style>
  </head>
  <%- include("../partials/agent_page_header") %>

  <body>
    <div class="container" id="pageContainer">
      <div class="row">
        <div id="callVideoColumn" class="col-md-8 text-center" style="border : 5px solid black">
          <!--Only appear outside of a call-->
          <div id="noCallPoster" hidden>
            <img  id="heroLogo" src="dro/images/acedirect-logo.png" alt="heroLogo">
          </div>
          <!--END Only appear outside of a call-->
          <!--Appear inside of a call-->
          <div id="inCallSection">
            <div id="callButtonsRow" class="row">
              <span>TODO min</span>
              <button id="mute-audio" type="button" class="btn btn-gray circleButton" onclick="muteAudio()">
                <i id="mute-audio-icon" class="call-btn-icon fa fa-microphone"></i>
              </button>
              <button id="hide-video" type="button" class="btn btn-gray circleButton" onclick="enableVideoPrivacy()">
                <i id="mute-camera-off-icon" class="call-btn-icon fa fa-video-camera"></i>
              </button>
              <button type="button" class="btn btn-gray circleButton" onclick="enterFullscreen()">
                <i id="fullscreen-icon" class="call-btn-icon fa fa-expand"></i>
              </button>
              <button type="button" class="btn btn-gray" id="startScreenshare">
                <i class="call-btn-icon fa fa-desktop"></i> Start Screenshare
              </button>
              <button id="end-call" type="button" class="btn btn-danger" onclick="terminateCall()">
                <i class="call-btn-icon fa fa-phone fa-rotate-135"></i> End Call
              </button>
            </div>

            <div id="speakingToRow" class="row">
              You are communicating with TODO
            </div>

            <div id="callVideosRow" class="row">
              <div class="col-md-4" id="selfViewCol">
                <video id="selfView" autoplay muted="true" class="mirror-mode"></video>
              </div>
              <div class="col-md-8" id="remoteViewCol">
                <video id="remoteView" autoplay></video>
              </div>
            </div>
          </div>
          <!--END Appear inside of a call-->
        </div>
        <div id="callFeaturesColumn" class="col-md-4">
          <div class="col-xs-9">
            <!-- Tab panes -->
            <div class="tab-content">
              <!--Chat pane-->
              <div class="tab-pane active" id="chatBody">
                <div class="box-header" style="overflow: hidden;">
                  <h2 style="float:left">Chat</h2>
                  <div class="btn-group" style="float:right; margin-top: 20px; height: 40px">
                    <button type="button" class="btn btn-secondary fontSizeButtons" style="font-size:smaller;">A</button>
                    <button type="button" class="btn btn-secondary fontSizeButtons" style="background-color: white; pointer-events: none;">100%</button>
                    <button type="button" class="btn btn-secondary fontSizeButtons" style="font-size:large;">A</button>
                  </div>
                </div>
                <hr />
                <div class="box-body" style="height:70vh">
                  <!-- Conversations are loaded here -->
                  <!--Hard coding messages for now-->
                  <div id="chat-body" style="height:70vh;">
                    <div class="direct-chat-messages fixed-bottom" id="chat-messages">
                      <div class="alert alert-secondary" role="alert"
                        style="background-color: lightgray !important; color: black; border-radius: 25px;">
                        <p><b>Agent</b> 12:00pm</p>
                        <p>This is a message from the Agent to demonstrate the chat style.</p>
                      </div>
                      <div class="alert alert-info" role="alert" style="color: black; border-radius: 25px;">
                        <p><b>You</b> 12:01pm</p>
                        <p>This is a message from the Consumer. These messages need to move to the bottom of the chat box</p>
                      </div>
                    </div>
                  </div>
        
                  <div id="chat-footer" class="box-footer">
                    <form name="chatsend" id="chatsend">
                      <div class="input-group">
                        <span class="input-group-btn">
                          <button id="chat-emoji" class="btn btn-primary btn-flat" type="button" data-toggle="dropdown"
                            animation="true" style="background-color: #073863 !important;" disabled>&#128512;</button>
                          <div class="dropdown-menu dropdown-multicol" id="emoji-selector" aria-labelledby="dropdownMenuButton"
                            style="height:150px; overflow-y: scroll;">
                            <li role="presentation" class="dropdown-header">Select an Emoji</li>
                            <li role="presentation" class="divider"></li>
                            <div class="dropdown-row">
                              <button class="dropdown-item" type="button" style="background-color:transparent; border:none"
                                onclick="addEmoji(this.value)" value="&#128512;">&#128512;</button>
                              <button class="dropdown-item" type="button" style="background-color:transparent; border:none"
                                onclick="addEmoji(this.value)" value="&#128513;">&#128513;</button>
                              <button class="dropdown-item" type="button" style="background-color:transparent; border:none"
                                onclick="addEmoji(this.value)" value="&#128516;">&#128516;</button>
                            </div>
                            <div class="dropdown-row">
                              <button class="dropdown-item" type="button" style="background-color:transparent; border:none"
                                onclick="addEmoji(this.value)" value="&#128547;">&#128547;</button>
                              <button class="dropdown-item" type="button" style="background-color:transparent; border:none"
                                onclick="addEmoji(this.value)" value="&#128577;">&#128577;</button>
                              <button class="dropdown-item" type="button" style="background-color:transparent; border:none"
                                onclick="addEmoji(this.value)" value="&#129320;">&#129320;</button>
                            </div>
                            <div class="dropdown-row">
                              <button class="dropdown-item" type="button" style="background-color:transparent; border:none"
                                onclick="addEmoji(this.value)" value="&#128077;">&#128077;</button>
                              <button class="dropdown-item" type="button" style="background-color:transparent; border:none"
                                onclick="addEmoji(this.value)" value="&#128078;">&#128078;</button>
                              <button class="dropdown-item" type="button" style="background-color:transparent; border:none"
                                onclick="addEmoji(this.value)" value="&#128075;">&#128075;</button>
                            </div>
                            <div class="dropdown-row">
                              <button class="dropdown-item" type="button" style="background-color:transparent; border:none"
                                onclick="addEmoji(this.value)" value="&#128263;">&#128263;</button>
                              <button class="dropdown-item" type="button" style="background-color:transparent; border:none"
                                onclick="addEmoji(this.value)" value="&#128264;">&#128264;</button>
                              <button class="dropdown-item" type="button" style="background-color:transparent; border:none"
                                onclick="addEmoji(this.value)" value="&#128266;">&#128266;</button>
                            </div>
        
                          </div>
                        </span>
                        <input type="hidden" id="displayname">
                        <input type="text" id="newchatmessage" placeholder="Chat disabled" class="form-control" maxlength="500"
                          autocomplete="off" required disabled>
        
                        <span class="input-group-btn">
                          <button id="chat-send" class="btn btn-primary btn-flat" type="submit"
                            style="background-color: #073863 !important;" disabled>Send</button>
                        </span>
                      </div>
                    </form>
                    <p hidden id="characters-left">You have <span id="chatcounter">500</span> characters
                      left.</p>
                  </div>
                </div>
              </div>
              <!-- end chat pane-->
              <!--File Share Pane-->
              <div class="tab-pane" id="fileBody">
                <div class="box-header" style="overflow: hidden;">
                  <h2 style="float:left">File Sharing</h2>
                  <div class="btn-group" style="float:right; margin-top: 20px; height: 40px">
                    <button type="button" class="btn btn-secondary fontSizeButtons" style="font-size:smaller;">A</button>
                    <button type="button" class="btn btn-secondary fontSizeButtons" style="background-color: white; pointer-events: none;">100%</button>
                    <button type="button" class="btn btn-secondary fontSizeButtons" style="font-size:large;">A</button>
                  </div>
                </div>
                <hr />
                <div class="box-body" style="height:70vh">
                  <!-- Conversations are loaded here -->
                  <!--Hard coding messages for now-->
                  <div id="file-share-body" style="height:70vh;">
                    <p>Select a file to send by clicking 'Choose File'; send the file by clicking 'Send'.</p>
                    <p>View sent files in the 'Sent File(s)' section, and view or download received files in the 'Received File(s)' section.</p>
                    <br>
                    <br>
                    <!--file selection section-->
                    <div class="btn-group">
                      <input type="file" id="fileInput" name="fileInput"
                        class="form-control-file btn btn-default"
                        style="background-color:transparent; border: transparent;" disabled>
                    </div>
                    <button class="btn btn-primary pull-right" id="shareFileConsumer" onclick="shareFileConsumer()" disabled>Send</button>
                    <!--end file selection section-->
                    <br>
                    <br>
                    <!--send files section-->
                    <h3>Sent File(s)</h3>
                    <hr style="border:1px solid grey"/>
                    <span>Example_picture.png</span>
                    <button class="btn btn-secondary pull-right fileshareButton"><i class="fa fa-eye"></i></button>
                    <!--end sent files section-->
                    <br>
                    <br>
                    <!--received files section-->
                    <h3>Received File(s)</h3>
                    <hr style="border:1px solid grey"/>
                    <span>Documentation.doc</span>
                    <button class="btn btn-secondary pull-right fileshareButton"><i class="fa fa-download"></i></button>
                    <button class="btn btn-secondary pull-right fileshareButton"><i class="fa fa-eye"></i></button>
                    <hr/>
                    <span>Image for you to look at.IMG</span>
                    <button class="btn btn-secondary pull-right fileshareButton"><i class="fa fa-download"></i></button>
                    <button class="btn btn-secondary pull-right fileshareButton"><i class="fa fa-eye"></i></button>
                    <hr/>
                    <!--end received files section-->
                  </div>
                </div>
              </div>
              <!--end file share pane-->
            </div>
          </div>
          <div class="col-xs-3">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs tabs-right" style="height: 90vh;">
              <li><a data-toggle="tab"><button id="collapseButton"><i class="fa fa-angle-double-right fa-2x"></i></button></a>
              </li>
              <li class="active"><a href="#chatBody" data-toggle="tab"><i class="fa fa-comments fa-2x"
                    style="color: #073863"></i></a></li>
              <li><a href="#fileBody" data-toggle="tab"><i class="fa fa-file fa-2x" style="color: #073863"></i></a></li>
            </ul>
          </div>
        </div>
        </div>
      </div>
    </div>

    
  </body>
  <%- include("../partials/acedirect_footer") %>
  <div id="optionsModal" class="modal fade">
		<div class="modal-dialog modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<img  id="placeholderImage" src="/dro/images/placeholder.png" width="100%" alt="Video placeholder">
				</div>
				<div class="modal-body text-center">
					
          <div class="row">
            <div class="col-xs-5 panel-col">
                <div class="panel panel-default button-panel">
                    <div class="panel-body">
                      <span class="panel-header">Videocall with an agent</span>

                      <i class="fa fa-user big-icon"></i>
                      <div class="button-area text-center">
                        <button type="button" class="btn btn-primary btn-style" data-dismiss="modal" onclick="enterQueue()">Call</button>
                      </div>
                    </div>
                    
                </div>
            </div>
            <div class="col-xs-2 or-column">
              OR
            </div>
            <div class="col-xs-5 panel-col">
              <div class="panel panel-default button-panel">
                <div class="panel-body">
                  <span class="panel-header">Leave a message</span>

                  <i class="fa fa-envelope big-icon"></i>
                  <div class="button-area text-center">
                    <button type="button" class="btn btn-primary btn-style" data-dismiss="modal">Leave Videomail</button>
                  </div>
                </div>
                
            </div>
            </div>
          </div>

				</div>
				<div class="modal-footer">
          <a href="#" onclick="logout()"><i class="fa fa-sign-out"></i> Exit Support Portal</a>
				</div>
			</div>
		</div>
	</div>
  <div id="waitingModal" class="modal fade">
		<div class="modal-dialog modal-dialog">
			<div class="modal-content">
				<div class="modal-header text-center">
          <h3>Waiting for the next available agent...</h3>
          <hr />
					<img  id="placeholderImage" src="/dro/images/placeholder.png" width="100%" alt="Video placeholder">
				</div>
				<div class="modal-body text-center">
					
          <div class="row">
            <div class="col-xs-12 text-center">
                If you do not wish to wait for an agent, you may:
            </div>
          </div>

				</div>
				<div class="modal-footer">
          <a href="#" onclick="logout()"><i class="fa fa-sign-out"></i> Exit Support Portal</a>
				</div>
			</div>
		</div>
	</div>
  <script type="text/javascript" src="/assets/js/jquery.min.js"></script>
	<script type="text/javascript" src="/assets/js/bootstrap.js"></script>
